<script id="serverTemplate" type="text/x-jquery-tmpl">
    <tr>
        <td>${SlNo}</td>
        <td>${ConnectionName}</td>
        <td>${ServerHostNameIP}</td>
        <td>${ServerUserName}</td>
        <td>${DatabaseName}</td>
        <td>${TableName}</td>
    </tr>
</script>


<div>
    <div class="panel">
        <div class="panel-body">
            <h3 class="title-hero">
                (Database)Server
            </h3>
            <div class="example-box-wrapper">
                <!-- Button to Open the Modal -->
                <button style="margin-bottom:10px" type="button" class="btn btn-sm btn-primary btn-hover" data-toggle="modal" data-backdrop="static" data-target="#serverAddEditModal">
                    <span> Add Database Server </span> <span class="glyphicon glyphicon-plus"></span>
                </button>

                <div id="datatable-responsive_wrapper" class="dataTables_wrapper form-inline margin-top-05">
                    <table id="servertable" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                        <thead>
                            <tr role="row">
                                <th style="width:5px" class="all">Sl No</th>
                                <th class="all">Connection Name</th>
                                <th>ServerHost NameIP</th>
                                <th>Server UserName</th>
                                <th>Database Name</th>
                                <th>Table Name</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>

</div>

<!-- The Modal -->
<div class="modal fade" id="serverAddEditModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <span>Server Add/Edit</span>
                <span><button type="button" class="close" data-dismiss="modal">&times;<i class="glyphicon glyphicon-close"></i></button></span>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                @Html.Partial("ServerAddEdit")
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>
<script src="~/Scripts/emailScript/serverParent.js"></script>

<div>
    <form class="well form-horizontal" data-remote="true" data-toggle="validator" role="form" method="post" id="project_form">
        <fieldset>

            <!-- Form Name -->
            <legend>Project Form</legend>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label">Project Name</label>
                <div class="col-md-8 inputGroupContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input name="ProjectName" id="ProjectName" placeholder="Create a Name" class="form-control" type="text">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">Active</label>
                <div class="col-md-8 selectContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
                        <input type="checkbox" name="ProjectStatus" id="ProjectStatus" class="form-control"/>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">Start Time</label>
                <div class="col-md-8 inputGroupContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input name="StartTime" id="StartTime" placeholder="add start time" class="form-control" type="datetime">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">Expire Time</label>
                <div class="col-md-8 inputGroupContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input name="ExpiredTime" id="ExpiredTime" placeholder="add expired time" class="form-control" type="datetime">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">Interval Period</label>
                <div class="col-md-8 inputGroupContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input  name="TimeInterval" id="TimeInterval" placeholder="add interval" class="form-control" type="number">
                    </div>
                </div>
            </div>


            <div class="form-group">
                <label class="col-md-4 control-label">Interval Type</label>
                <div class="col-md-8 selectContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
                        <select name="IntervalOption" id="IntervalOption" class="form-control selectpicker">
                            <option value="Days">Days</option>
                            <option value="Month">Month</option>
                            <option value="Year">Year</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- Success message -->
            <div class="alert alert-success hide" role="alert" id="ProjectSuccess_message">
                Success <i class="glyphicon glyphicon-thumbs-up"></i>
                Thanks for saving Project Info.
            </div>

            <!-- Button -->
            <div class="form-group" id="submit">
                <label class="col-md-4 control-label"></label>
                <div class="col-md-8">
                    <span>
                        <button type="submit" class="btn btn-info">Save <span class="glyphicon glyphicon-send"></span></button> @*disabled*@
                        <button type="button" id="ProjectRefresh" class="btn btn-info">Refresh <span class="glyphicon glyphicon-refresh"></span></button>
                    </span>
                </div>

            </div>

        </fieldset>
    </form>
</div>

<script src="~/Scripts/emailScript/projectChild.js"></script>
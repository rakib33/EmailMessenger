<div>
    <form class="well form-horizontal" data-remote="true" data-toggle="validator" role="form" method="post" id="group_form">
        <fieldset>

            <!-- Form Name -->
            <legend>Group Form</legend>

            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label">Group Name</label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input name="GroupName" id="GroupName" placeholder="Create a Name" class="form-control" type="text">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">Select Server</label>
                <div class="col-md-4 selectContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
                        <select name="DbConnection" id="DbConnection" class="form-control selectpicker">
                        </select>
                    </div>
                </div>
            </div>            
            <div class="form-group">
                <label class="col-md-4 control-label">Description</label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input name="GroupDescription" id="GroupDescription" placeholder="add description" class="form-control" type="text">
                    </div>
                </div>
            </div>
           <!-- Success message -->
            <div class="alert alert-success" role="alert" id="success_message">
                Success <i class="glyphicon glyphicon-thumbs-up"></i>
                Thanks for saving Mail ServerInfo.
            </div>

            <!-- Button -->
            <div class="form-group" id="submit">
                <label class="col-md-4 control-label"></label>
                <div class="col-md-4">
                    <span>
                        <button type="submit" class="btn btn-info">Save <span class="glyphicon glyphicon-send"></span></button> @*disabled*@
                    </span>
                </div>

            </div>

        </fieldset>
    </form>
</div>
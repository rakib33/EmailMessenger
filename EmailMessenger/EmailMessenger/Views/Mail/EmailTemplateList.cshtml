<script id="eMailTemplate" type="text/x-jquery-tmpl">
    <tr>
        <td>${SlNo}</td>
        <td>${TemplateName}</td>
        <td>${TemplateFilePath}</td>
        <td><button onclick='alert(${Id})'>Text Data</button></td>
    </tr>
</script>

<div id="group">
    <div class="panel">
        <div class="panel-body">
            <h3 class="title-hero">
                Email-template
            </h3>
            <div class="example-box-wrapper">
                <!-- Button to Open the Modal -->
                <button style="margin-bottom:10px" type="button" class="btn btn-sm btn-primary btn-hover" data-toggle="modal" data-backdrop="static" data-target="#templateAddEditModal">
                     <span> Add Template </span> <span class="glyphicon glyphicon-plus"></span>
                </button>

                <div id="datatable-responsive_wrapper" class="dataTables_wrapper form-inline margin-top-05">
                    <table id="emailTemplatetable" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                        <thead>
                            <tr role="row">
                                <th style="width:5px" class="all">Sl No</th>
                                <th class="all">Template Name</th>
                                <th>Template FilePath</th>
                                <th></th>                                                       
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>

</div>

<!-- The Modal -->
<div class="modal fade" id="templateAddEditModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <span><strong>Template Form</strong></span>
                <span><button id="addTemplate" type="button" class="close" data-dismiss="modal">&times;<i class="glyphicon glyphicon-close"></i></button></span>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                @Html.Partial("AddMailTemplate")
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="release btn btn-primary" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>


<script src="~/Scripts/emailScript/templateParent.js"></script>